<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<database name="bookstore" defaultIdMethod="native"
          namespace="Propel\Tests\Relations" tablePrefix="relations_">

    <table name="friend" isCrossRef="true">
        <column name="user_id" type="integer" primaryKey="true"/>
        <column name="group_id" type="integer" primaryKey="true"/>
        <column name="relation_id" type="integer" primaryKey="true"/>

        <foreign-key foreignTable="user" phpName="User">
            <reference local="user_id" foreign="id"/>
        </foreign-key>

        <foreign-key foreignTable="group" phpName="Group">
            <reference local="group_id" foreign="id"/>
        </foreign-key>

        <foreign-key foreignTable="relation" phpName="Relation">
            <reference local="relation_id" foreign="id"/>
        </foreign-key>
    </table>

    <table name="user">
        <column name="id" type="integer" primaryKey="true" autoIncrement="true"/>
        <column name="name"/>
    </table>

    <table name="group">
        <column name="id" type="integer" primaryKey="true" autoIncrement="true"/>
        <column name="name"/>
    </table>

    <table name="relation">
        <column name="id" type="integer" primaryKey="true" autoIncrement="true" />
        <column name="type"/>
    </table>
</database>