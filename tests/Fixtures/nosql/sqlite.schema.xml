<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<database name="sqlite" defaultIdMethod="native"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          namespace="Propel\Tests\Bookstore">

    <table name="book_lite" description="SQLite Book Table">
        <column name="id" primaryKey="true" type="varchar" description="Book Id" />
        <column name="title" type="VARCHAR" required="true" description="Book Title" primaryString="true" />
    </table>
</database>
