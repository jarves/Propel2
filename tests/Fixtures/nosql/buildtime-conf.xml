<?xml version="1.0" encoding="ISO-8859-1"?>
<config>
    <propel>
        <datasources default="nosql">
            <datasource id="nosql">
                <adapter>Mongo</adapter>
                <connection>
                    <server>localhost:27017</server>
                    <database>test</database>
                </connection>
            </datasource>
            <datasource id="sqlite">
                <adapter>Sqlite</adapter>
                <connection>
                    <dsn>sqlite:test.sq3</dsn>
                </connection>
            </datasource>
        </datasources>
    </propel>
</config>
